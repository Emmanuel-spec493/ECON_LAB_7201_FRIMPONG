library(dplyr)
avg_mpg <- mpg %>%
  group_by(class) %>%
  summarise(avg_hwy_mpg =mean(hwy,na.rm=TRUE))
ggplot(avg_mpg,aes(y = class,x = avg_hwy_mpg)) +
  geom_col(fill ="lightblue") + # set all bars to light blue
  labs(title = "Average Highway MPG by Vehicle Class",
        y = "vehicle Class",
        x = "average Highway MPG") +
  theme_minimal()
       